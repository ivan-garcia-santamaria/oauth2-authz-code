<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="UTF-8">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>Página Intermedia con Spinner</title>
    <!-- Bootstrap CSS -->
    <link rel="stylesheet" href="https://stackpath.bootstrapcdn.com/bootstrap/4.3.1/css/bootstrap.min.css"
          integrity="sha384-ggOyR0iXCbMQv3Xipma34MD+dH/1fQ784/j6cY/iJTQUOhcWr7x9JvoRxT2MZw1T"
          crossorigin="anonymous">
    <style>
        /* Estilo para centrar el spinner */
        .spinner-container {
            display: flex;
            justify-content: center;
            align-items: center;
            height: 100vh;
        }
    </style>
</head>
<body>

<div class="spinner-container">
    <!-- Spinner animado -->
    <div class="spinner-border text-primary" role="status">
        <span class="sr-only">Loading...</span>
    </div>
</div>

<!-- Contenido principal oculto -->
<div id="content" style="display: none;">
    <div class="container">
        <h1>¡Bienvenido!</h1>
        <p>Contenido de tu página principal...</p>
    </div>
</div>

<!-- Bootstrap JS -->
<script src="https://code.jquery.com/jquery-3.3.1.slim.min.js"
        integrity="sha384-q8i/X+965DzO0rT7abK41JStQIAqVgRVzpbzo5smXKp4YfRvH+8abtTE1Pi6jizo"
        crossorigin="anonymous"></script>
<script src="https://cdnjs.cloudflare.com/ajax/libs/popper.js/1.14.7/umd/popper.min.js"
        integrity="sha384-UO2eT0CpHqdSJQ6hJty5KVphtPhzWj9WO1clHTMGa3JDZwrnQq4sF86dIHNDz0W1"
        crossorigin="anonymous"></script>
<script src="https://stackpath.bootstrapcdn.com/bootstrap/4.3.1/js/bootstrap.min.js"
        integrity="sha384-JjSmVgyd0p3pXB1rRibZUAYoIIy6OrQ6VrjIEaFf/nJGzIxFDsf4x0xIM+B07jRM"
        crossorigin="anonymous"></script>

<script>
    // Función para verificar periódicamente el estado del dispositivo
    function verificarAuthz() {
        setInterval(() => {
            // Obtén el device_code de donde sea que lo estés almacenando en tu página
            var authReqId = '<%= jsonData.auth_req_id %>'; // Asegúrate de obtenerlo correctamente

            // Realiza una solicitud al nuevo endpoint para verificar el estado del dispositivo
            fetch('/check-ciba?auth_req_id=' + authReqId)
                .then(response => response.json())
                .then(data => {
                    if (data.authn) {
                        console.log(JSON.stringify(data.authn, undefined, 2))
                        // Si se ha obtenido un token, redirigir a una nueva página
                        window.location.href = '/token-page?authn=' + JSON.stringify(data.authn, undefined, 2);
                    }
                })
                .catch(error => {
                    console.error('Error al verificar el estado de la authz:', error);
                });
        }, 5000); // Verificar cada 5 segundos (puedes ajustar este valor según tus necesidades)
    }

    // Llama a la función para iniciar la verificación periódica del estado del dispositivo
    verificarAuthz();
</script></html>

</body>
</html>
